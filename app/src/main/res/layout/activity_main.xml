<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
       android:id="@+id/text"
        android:layout_width="233dp"
        android:layout_height="63dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="208dp"
        android:text="0"
        android:textSize="25dp"
         />

    <Button
        android:id="@+id/button_1"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:text="1" />


    <Button
        android:id="@+id/button_2"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/button_1"
        android:layout_margin="5dp"
        android:text="2" />

    <Button
        android:id="@+id/button_3"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/button_2"
        android:layout_margin="5dp"
        android:text="3" />
    <Button
        android:id="@+id/button_plus"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/button_3"
        android:layout_margin="5dp"
        android:text="+" />
    <Button
        android:id="@+id/button_4"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_below="@id/button_1"
        android:text="4"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/button_5"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/button_4"
        android:layout_below="@id/button_2"
        android:text="5"
        android:layout_margin="5dp"/>
    <Button
        android:id="@+id/button_6"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/button_5"
        android:layout_below="@id/button_3"
        android:text="6"
        android:layout_margin="5dp"/>
    <Button
        android:id="@+id/button_minus"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/button_6"
        android:layout_below="@id/button_plus"
        android:layout_margin="5dp"
        android:text="-" />
    <Button
        android:id="@+id/button_7"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_below="@id/button_4"
        android:text="7"
        android:layout_margin="5dp"/>
    <Button
        android:id="@+id/button_8"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/button_7"
        android:layout_below="@id/button_5"
        android:text="8"
        android:layout_margin="5dp"/>
    <Button
        android:id="@+id/button_9"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/button_5"
        android:layout_below="@id/button_6"
        android:text="9"
        android:layout_margin="5dp"/>
    <Button
        android:id="@+id/button_multiply"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/button_9"
        android:layout_below="@id/button_minus"
        android:layout_margin="5dp"
        android:text="X" />
    <Button
        android:id="@+id/button_decimal"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_below="@id/button_7"
        android:layout_margin="5dp"
        android:text="." />
    <Button
        android:id="@+id/button_0"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/button_decimal"
        android:layout_below="@id/button_8"
        android:layout_margin="5dp"
        android:text="0" />
    <Button
        android:id="@+id/button_clear"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/button_0"
        android:layout_below="@id/button_9"
        android:layout_margin="5dp"
        android:text="AC" />
    <Button
        android:id="@+id/button_divide"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/button_clear"
        android:layout_below="@id/button_multiply"
        android:layout_margin="5dp"
        android:text="/" />

    <Button
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_0"
        android:text="="
        android:id="@+id/button_equals"/>
</RelativeLayout>